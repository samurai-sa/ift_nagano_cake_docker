<h2>会員情報編集</h2>

<%= form_with(model:@end_user, url:customers_update_path ,method: :PATCH) do |f| %>

  <div class="field">
    <%= f.label :氏名 %><br>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="action"><br>
    <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
    <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
  </div>

<% end %>
