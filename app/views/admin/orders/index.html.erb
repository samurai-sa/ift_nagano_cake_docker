<div class="text-center">
  <h1>注文履歴一覧</h1>

  <table class="table table-bordered">
    <thead>
      <tr class="table-active">
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td scope="col">
            <%= link_to admin_order_path(order) do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <% end %>
          <td scope="col"><%= order.end_user.last_name %><%= order.end_user.first_name %></td>
          <td scope="col"><%= order.order_details.sum(:amount) %></td>
          <td scope="col">
            <%= order.status_i18n %>
          </td>
      <% end %>
    </tbody>
  </table>
</div>
