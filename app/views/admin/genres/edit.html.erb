<div class="text-center">
  <h1>ジャンル編集</h1><br>
  <%= form_with(model:@genre, url:admin_genre_path ,method: :PATCH) do |f| %>
    <div class="field">
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
