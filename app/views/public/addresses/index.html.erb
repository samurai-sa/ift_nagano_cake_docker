<div class="text-center">
  <h1>配送先登録・一覧</h1>
  <%= form_with(model:@address, url:addresses_path ,method: :POST, local: true) do |f| %>
  
    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %><br>
      <%= f.text_field :postal_code, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :住所 %><br>
      <%= f.text_field :address, autofocus: true %>
    </div>
    
     <div class="field">
      <%= f.label :氏名 %><br>
      <%= f.text_field :name, autofocus: true %>
    </div>
    
    <div class="action"><br>
    <%= f.submit "登録する", class: "btn btn-success" %>
    </div>
  <% end %>
  
  <table class="table table-bordered"><br>
    <thead>
      <tr class="table-active">
        <th scope="col">郵便番号</th>
        <th scope="col">住所</th>
        <th scope="col">名前</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td scope="col"><%= address.postal_code %></td>
          <td scope="col"><%= address.address %></td>
          <td scope="col"><%= address.name %></td>
          <td scope="col">
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address), class: "btn btn-danger", method: :delete, data: {confirm: "削除しますか？"}  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
