<div class="text-center">
  <h1>
    商品一覧
    <%= link_to "商品新規登録", new_admin_item_path, class: "btn btn-success" %>
  </h1>

  <table class="table table-bordered">
    <thead>
      <tr class="table-active">
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td scope="col"><%= item.id %></td>
          <td scope="col"><%= item.name %></td>
          <td scope="col"><%= item.price %></td>
          <td scope="col"><%= item.genre.name %></td>
          <td scope="col">
            <% if item.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
          <td scope="col">
            <%= link_to "編集", edit_admin_item_path(item), class: "btn btn-success" %>
            <%= link_to "削除", admin_item_path(item), class: "btn btn-danger", method: :delete, data: {confirm: "削除しますか？"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
