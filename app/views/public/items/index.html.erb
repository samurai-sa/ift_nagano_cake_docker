<div class="text-center">
  <h1>商品一覧</h1>
  <% unless @items.present? %>
    <h4>検索結果はありません。</h4>
  <% end %>
  <div class="card-body row d-flex justify-content-center">
    <% @items.each do |item| %>
      <div class="card m-4 col-md-3.5 p-2" style="width: 18rem;">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, size: "270x200", fallback: 'cake.jpg' %>
          <div class="card-body">
            <p class="card-text">
              <%= item.name %><br>
              ¥<%= item.price.to_s(:delimited, delimiter: ',') %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
