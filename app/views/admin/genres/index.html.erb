<div class="text-center">
  <h1>ジャンル一覧・追加</h1><br>
  <!--ジャンル追加フォーム-->
  <%= form_with(model:@genre, url:admin_genres_path ,method: :POST) do |f| %>

    <div class="field">
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div><br>
  <% end %>

  <!--ジャンル一覧-->
  <table class="w-50 mx-auto table table-bordered">
    <thead>
      <tr class="table-active">
        <th scope="col3 w-50">ジャンル</th>
        <th scope="col3"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre|%>
        <tr>
          <td scope="col3 w-50"><%= genre.name %></td>
          <td scope="col3"><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
