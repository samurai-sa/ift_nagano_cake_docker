<div class="text-center">
  <h1>
    商品一覧
    <%= link_to new_admin_item_path do %>
      <svg width="30px" height="30px" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="black">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    <% end %>
  </h1>

  <table class="table table-bordered">
    <thead>
      <tr class="table-active">
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td scope="col"><%= item.id %></td>
          <td scope="col"><%= item.name %></td>
          <td scope="col"><%= item.price %></td>
          <td scope="col"><%= item.genre.name %></td>
          <td scope="col">
            <% if item.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
          <td scope="col">
            <%= link_to "編集", edit_admin_item_path(item), class: "btn btn-success" %>
            <%= link_to "削除", admin_item_path(item), class: "btn btn-danger", method: :delete, data: {confirm: "削除しますか？"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
