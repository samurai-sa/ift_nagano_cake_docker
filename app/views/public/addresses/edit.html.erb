<div class="text-center">
  <h1>配送先登録・一覧</h1>
  <%= form_with(model:@address, url:address_path ,method: :PATCH) do |f| %>

    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %><br>
      <%= f.text_field :postal_code, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :住所 %><br>
      <%= f.text_field :address, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :氏名 %><br>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="action"><br>
    <%= f.submit "編集を更新する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
